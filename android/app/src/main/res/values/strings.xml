<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ========================================= -->
    <!-- App Info -->
    <!-- ========================================= -->
    <string name="app_name">Xcreate Member</string>

    <!-- ========================================= -->
    <!-- Notification Listener -->
    <!-- ========================================= -->
    <string name="notification_service_label">
        Xcreate Notification Listener
    </string>
    <string name="notification_service_description">
        Layanan ini digunakan untuk membaca semua notifikasi dari perangkat 
        dan mengirimkan datanya ke server sesuai URL yang sudah Anda atur.
        Harap aktifkan layanan ini di Pengaturan → Notifikasi Akses.
    </string>
    <!-- Tambahan agar tidak error di notification_config.xml -->
    <string name="notification_accessibility_desc">
        Mendengarkan notifikasi dari aplikasi lain untuk diproses oleh Xcreate.
    </string>

    <!-- ========================================= -->
    <!-- Accessibility Service -->
    <!-- ========================================= -->
    <string name="accessibility_service_label">
        Xcreate Notif Accessibility
    </string>
    <string name="accessibility_service_description">
        Layanan ini digunakan untuk menangkap event aksesibilitas dan notifikasi,
        kemudian menyimpan log ke penyimpanan lokal (SharedPreferences) 
        sekaligus mengirimkan data ke server.
        Aktifkan di Pengaturan → Aksesibilitas agar aplikasi tetap berjalan
        walaupun ditutup.
    </string>
    <string name="accessibility_service_instructions">
        Aktifkan "Xcreate Notif Accessibility" di menu 
        Pengaturan → Aksesibilitas agar aplikasi dapat bekerja dengan baik.
    </string>
    <!-- Tambahan agar tidak error di accessibility_config.xml -->
    <string name="accessibility_desc">
        Membaca konten aplikasi untuk fitur notifikasi dan log event.
    </string>

    <!-- ========================================= -->
    <!-- General Messages -->
    <!-- ========================================= -->
    <string name="service_running">Layanan sedang berjalan…</string>
    <string name="service_stopped">Layanan berhenti</string>
    <string name="error_no_url">URL tujuan belum diatur</string>
    <string name="saved_success">Data berhasil disimpan</string>
    <string name="post_success">Notifikasi berhasil dikirim ke server</string>
    <string name="post_failed">Gagal mengirim data ke server</string>
</resources>
